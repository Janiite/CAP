<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Popover
		id="editTrainingPopover"
		class=" sapUiResponsiveMargi"
		placement="HorizontalPreferredLeft"
		initialFocus="submit"
	>
		<List headerText="{i18n>editHeaderText}">
			<InputListItem label="{i18n>trainingType}">
				<Select
					id="updateType"
					items="{
						path: '/TrainingTypes',
						sorter: {
							path: 'name'
						}
					}"
				>
					<core:Item
						key="{trainingTypeId}"
						text="{name}"
					/>
				</Select>
			</InputListItem>
			<InputListItem label="{i18n>trainneeName}">
				<Input
					id="updateTrainingName"
					placeholder="{i18n>trainneeName}"
					value="{Trainings>/traineeName}"
				/>
			</InputListItem>
			<InputListItem label="{i18n>trainneeSurname}">
				<Input
					id="updateTrainingSurname"
					placeholder="{i18n>trainneeSurname}"
					value="{Trainings>/traineeSurname}"
				/>
			</InputListItem>
			<InputListItem label="{i18n>date}">
				<DatePicker
					id="UDP1"
					placeholder="{i18n>date}"
					class="sapUiSmallMarginBottom"
					valueFormat="YYYY-MM-dd"
					valueState="None"
					value="{
						path: 'Trainings>/trainingDate',
						type: 'sap.ui.model.type.Date',
						formatOptions: {
							style: 'long',
							strictParsing: true
						}
					}"
				/>
			</InputListItem>
			<InputListItem label="{i18n>time}">
				<TimePicker
					id="UTP1"
					valueFormat="hh:mm:ss"
					value="{Trainings>/trainingTime}"
					placeholder="{i18n>time}"
				/>
			</InputListItem>
		</List>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="updateTraining"
					text="{i18n>updateButton}"
					press=".onUpdateTraining"
				/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>