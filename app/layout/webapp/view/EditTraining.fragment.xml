<core:FragmentDefinition
xmlns="sap.m"
xmlns:core="sap.ui.core" >
<Dialog
									id="myDialog"
									title="{i18n>editHeaderText}"
									type="Message"
									
								>
									<VBox  renderType="Bare">
										<Label text="{i18n>trainneeName}"/>
										<Input value="{traineeName}"/>
									</VBox>
									<beginButton>
										<Button
											text="Cancel"
											press=".onCancelPress"
										/>
									</beginButton>
									<endButton>
										<Button
											text="OK"
											press=".onOkPress"
										/>
									</endButton>
								</Dialog>
</core:FragmentDefinition>