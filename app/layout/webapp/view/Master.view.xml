<mvc:View controllerName="demo.layout.controller.Master"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Trainers"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <ToolbarSpacer/>
                         <ComboBox id="selectLocation" change=".onSearch" width="auto" placeholder="select gym" items="{
                                    path: '/Gyms'
                                }">
                            <items>
                                <core:Item key="{gymId}" text="{name}" />
                            </items>
                        </ComboBox>
                    <OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onDefaultDialogPress"/>
                </OverflowToolbar>
                	 <Table 
                        id="trainerTable" 
                        inset="false"
                        items="{ path: '/Trainers'}" >
                         <columns id="columns">
                    <Column id="nameColumn">
                        <Title text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>

                    <Column id="unitNumberColumn">
                        <Title text="{i18n>locationTitle}" id="locationColumnTitle"/>
                    </Column>
                    <Column id="dateColumn">
                        <Title text="{i18n>dateTitle}" id="dateColumnTitle"/>
                    </Column>
                    <Column id="timeColumn">
                        <Title text="{i18n>timeTitle}" id="timeColumnTitle"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier text=" {name} {surname}" />
                            <ObjectIdentifier text="{location/name}"/>
                            <ObjectIdentifier text="{date}"/>
                            <ObjectIdentifier text="{timeFrom} - {timeTo}"/>
                        </cells>
                    </ColumnListItem>
                </items>


				</Table>
			
            </VBox>



        </f:content>
        



    </f:DynamicPage>
</mvc:View>
