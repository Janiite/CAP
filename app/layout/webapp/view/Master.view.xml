<mvc:View controllerName="demo.layout.controller.Master"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Trainers"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <ToolbarSpacer/>
                    <ComboBox id="selectLocation" change=".onSearch" width="auto" placeholder="select gym" items="{
                                    path: '/Gyms'
                                }">
                        <items>
                            <core:Item key="{gymId}" text="{name}" />
                        </items>
                    </ComboBox>
                    <OverflowToolbarButton icon="sap-icon://add" text="Show Popover" press="handlePopoverPress" ariaHasPopup="Dialog"/>
                    
                    <Button id="deleteUserButton" icon="sap-icon://delete" tooltip="{i18n>deleteButtonText}" press=".onDelete"/>
                </OverflowToolbar>
                <Table id="trainerTable" inset="false" items="{ path: '/Trainers'}" mode="SingleSelectLeft">
                    <columns id="columns">
                        <Column >
                            <Title text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                        </Column>
                        <Column>
                            <Title text="{i18n>locationTitle}" id="locationColumnTitle"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press=".onListItemPress">
                            <cells>
                                <ObjectIdentifier text=" {name} {surname}" />

                                <ObjectIdentifier text="{location/name}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
