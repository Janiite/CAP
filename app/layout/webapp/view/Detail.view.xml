<mvc:View
	xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="demo.layout.controller.Detail"
>
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		isChildPage="true"
		upperCaseAnchorBar="false"
	>
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title
						text="{name} {surname}"
						wrapping="true"
						class="sapUiSmallMarginEnd"
					/>
				</expandedHeading>
				<actions>
					<m:Button
						icon="sap-icon://add"
						type="Transparent"
						press="handlePopoverPress"
					/>
					<m:Button
					ariaHasPopup="Dialog"
					type="Transparent"
					tooltip="Open Date Picker"
					icon="sap-icon://appointment-2"
					press=".openDatePicker" />
				
					<m:DatePicker
								id="Today"
								hideInput="true"
								placeholder="Date"
								valueFormat="YYYY-MM-dd"
								change="handleChange"
								class="sapUiSmallMarginBottom"
								value="{
									path: 'Trainings>/trainingDate',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'long',
										strictParsing: true
									}"
													/>
					<m:Button
						icon="sap-icon://delete"
						type="Transparent"
						press=".onDelete"
					/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<headerContent id="header">
			<m:FlexBox
			
				wrap="Wrap"
				fitContainer="true"
			>
				<m:VBox
					justifyContent="Center"
					class="sapUiSmallMarginEnd"
				>
					<m:Label
						id="currentGym"
						text="Gym {location/name}"
					/>
					
				</m:VBox>
			</m:FlexBox>
		</headerContent>
		<sections>
			<ObjectPageSection title="Trainings">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="trainingsTable"
								items="{
									path: '/Trainings'
								}"
								mode="SingleSelectLeft"
							>
								<m:columns>
									<m:Column>
										<m:Title text="Trainne name"/>
									</m:Column>
									<m:Column>
										<m:Title text="Training type"/>
									</m:Column>
									<m:Column>
										<m:Title text="Training date"/>
									</m:Column>
									<m:Column>
										<m:Title text="Training Time"/>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{traineeName}"/>
											<m:ObjectIdentifier text="{traininType/name}"/>
											<m:ObjectIdentifier text="{
												path: 'trainingDate'
											}"/>
											<m:ObjectIdentifier text="{
												path: 'trainingTime'
											}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
							
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>