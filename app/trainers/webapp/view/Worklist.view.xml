<mvc:View xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core" controllerName="demo.trainers.controller.Worklist">

    <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" showNavButton="true">

        <semantic:titleHeading>
            <Title text="{i18n>worklistTitle}" level="H2"/>

        </semantic:titleHeading>

        <semantic:content>
            <Table id="trainerTable" width="auto" items="{ path: '/Trainers', sorter: { path: 'name', descending: false }}" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3"/>


                        <ComboBox id="selectLocation" change=".onSelect" width="auto" placeholder="select gym" items="{
                                    path: '/Gyms',
                                    sorter: { path: 'name' }
                                }">
                            <items>
                                <core:Item key="{gymId}" text="{name}" />

                            </items>

                        </ComboBox>
                        <ToolbarSpacer/>

                        <Button text="New Trainer" width="230px" press=".onDefaultDialogPress" class="sapUiSmallMarginBottom" ariaHasPopup="Dialog" />

                        <content/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns id="columns">
                    <Column id="nameColumn">
                        <Title text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>

                    <Column id="unitNumberColumn">
                        <Title text="{i18n>locationTitle}" id="locationColumnTitle"/>
                    </Column>
                    <Column id="dateColumn">
                        <Title text="{i18n>dateTitle}" id="dateColumnTitle"/>
                    </Column>
                    <Column id="timeColumn">
                        <Title text="{i18n>timeTitle}" id="timeColumnTitle"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press=".onPress">
                        <cells>
                            <ObjectIdentifier text=" {name} {surname}" />
                            <ObjectIdentifier text="{location/name}"/>
                            <ObjectIdentifier text="{date}"/>
                            <ObjectIdentifier text="{timeFrom} - {timeTo}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>


    </semantic:SemanticPage>

</mvc:View>