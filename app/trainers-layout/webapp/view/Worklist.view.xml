<mvc:View controllerName="demo.trainerslayout.controller.Worklist"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <SplitApp id="SplitAppDemo" initialDetail="detail" initialMaster="master">
        <detailPages>
            <Page id="detail" title="Detail 1" backgroundDesign= "Solid">
                <Label text="Detail page 1" />
                <Button text="Go to Detail page2" press=".onPressNavToDetail" />
            </Page>

            <Page id="detail2" title="Trainer details" backgroundDesign= "Solid" showNavButton="true" navButtonPress=".onPressDetailBack">
                <Title text="Name {name}" level="H2"/>

            </Page>
        </detailPages>
        <masterPages>

            <Page id="master2" headerPinnable="false" toggleHeaderOnTitleClick="false">



                <content>
                    <Table id="trainerTable" class="sapFDynamicPageAlignContent" width="auto" items="{ path: '/Trainers', sorter: { path: 'name', descending: false }}" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">

                        <headerToolbar>
                            <OverflowToolbar>
                                <Title id="tableHeader" text="{worklistView>/worklistTableTitle}" level="H3" icon=""/>
                                <ToolbarSpacer/>
                                <ComboBox id="selectLocation" change=".onSelect" width="50%" placeholder="select gym" items="{
                                    path: '/Gyms',
                                    sorter: { path: 'name' }
                                }">
                                    <items>
                                        <core:Item key="{gymId}" text="{name}" />

                                    </items>

                                </ComboBox>
                                <ToolbarSpacer/>
                                <content/>
                            </OverflowToolbar>
                        </headerToolbar>

                        <columns id="columns">
                            <Column id="nameColumn">

                            </Column>


                        </columns>
                        <items>
                            <ColumnListItem type="Navigation" press=".onPressNavToDetail">
                                <cells>
                                    <ObjectIdentifier id="trainerId" text=" {name} {surname}" />

                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>


            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>